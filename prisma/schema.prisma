// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String       @id @default(cuid())
  name        String
  sku         String       @unique
  price       Float
  hidePrice   Boolean?     @default(false)
  description String
  features    Feature[]
  category    Category     @relation(fields: [categoryId], references: [id])
  categoryId  String
  images      Image[]
  stockStatus String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Image {
  id        String   @id @default(cuid())
  url       String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
}

model Feature {
  id        String   @id @default(cuid())
  text      String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
}

model Category {
  id           String    @id @default(cuid())
  name         String    @unique
  displayOrder Int       @default(0)
  products     Product[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Banner {
  id          String   @id @default(cuid())
  title       String
  subtitle    String
  imageUrl    String
  mobileImageUrl String?
  linkText    String
  linkUrl     String
  isActive    Boolean  @default(true)
  displayOrder Int     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StockStatus {
  id          String   @id @default(cuid())
  label       String
  value       String   @unique
  color       String   // e.g., "green", "red", "orange", or hex
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StoreSettings {
  id          String   @id @default("default")
  storeName   String   @default("Eljarjini Complexe")
  logoUrl     String?
  faviconUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

